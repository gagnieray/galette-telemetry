/*******************************
         Galette Overrides
*******************************/

.ui.form .field.search {
  margin: 0;
}

/*-------------------------------------------
    Fix display in styled accordions
--------------------------------------------*/
.ui.styled.accordion .ui.search > .results .content {
  padding: 0;
}
.ui.styled.accordion .ui.search > .results .title {
  padding: 0;
  background: none;
  border-top: none;
  &:hover {
    background: none;
  }
}

/*----------------------------------------------------------
    Do not display full width when not inline with label
-----------------------------------------------------------*/
.ui.form .ui.search .ui.input {
  width: auto;
  input {
    flex-grow: 0;
  }
}

/*----------------------------------------------------------
    No margin around prompt when inline with label
-----------------------------------------------------------*/
.ui.form .inline.field .ui.search .prompt {
  margin: 0;
}
